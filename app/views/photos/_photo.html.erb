<tr>
  <td><%= photo.title %></td>
  <td><%= I18n.l(photo.updated_at) %></td>
  <td><%= link_to image_tag(photo.picture_url, width: 300), photo if photo.picture.present? %></td>
  <td>
    <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-text="写真をシェアするよ！" data-url="<%= File.join(request.url, photo.id.to_s) %>"a-hashtags="#photos" data-lang="ja" data-show-count="false">Tweet</a>
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  </td>
  <td><%= link_to '詳細ページ', photo %></td>
  <td><%#= link_to 'Edit', edit_photo_path(photo) %></td>
  <td><%= link_to '削除する', photo, method: :delete, data: { confirm: '削除してよろしいですか?' } %></td>
</tr>
